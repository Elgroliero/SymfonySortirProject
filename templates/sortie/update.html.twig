{% extends 'base.html.twig' %}

{% block body %}
    <div class="boxShadow">
        <h1 class="center">Modifier une sortie</h1>
        {% form_theme form 'bootstrap_5_layout.html.twig' %}
        {{form_start(form) }}

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ url('home_publish',{'id':sortie.id}) }}" class="btn btn-primary">Publier</a>
        {% if app.user.id == sortie.organisateur.id or is_granted('ROLE_ADMIN') %}
            <a href="{{ url('home_delete',{'id':sortie.id}) }}" class="btn btn-danger">Annuler</a>
        {% endif %}
        {{ form_end(form) }}

    </div>

{% endblock %}

